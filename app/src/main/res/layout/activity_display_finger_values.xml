<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.txbdc.armmeasurement.DisplayFingerValues">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:src="@drawable/hand"
        />

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/thumb_distal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:rotation="270"/>

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/thumb_proximal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="340dp"
        android:rotation="250"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/index_distal"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="145dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/index_proximal"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="225dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/middle_distal"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="145dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/middle_proximal"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="225dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ring_distal"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="160dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/ring_proximal"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="235dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/pinky_distal"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="195dp"
        android:rotation="270"/>
    <SeekBar
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/pinky_proximal"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="270dp"
        android:rotation="270"/>
</RelativeLayout>
